{
    "compilerOptions": {
        "declaration": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es6",
        "jsx": "react",
        "jsxFactory": "oJSX.createElement",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}